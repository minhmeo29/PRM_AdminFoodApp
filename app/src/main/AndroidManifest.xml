<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdminFoodApp"
        tools:targetApi="31">

        <!-- LoginActivity là màn hình khởi động -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"> <!-- phải là true để làm màn hình launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity không còn là LAUNCHER -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".OutForDeliveryActivity"
            android:exported="false" />
        <activity
            android:name=".AdminProfileActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true" />

    </application>

</manifest>
